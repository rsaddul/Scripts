<gs:GlobalizationServices xmlns:gs="urn:longhornGlobalizationUnattend">
    <!--User List-->
    <gs:UserList>
        <gs:User UserID="Current" CopySettingsToSystemAcct="true" CopySettingsToDefaultUserAcct="true" /> 
    </gs:UserList>

    <!--Display Language--> 
    <gs:MUILanguagePreferences> 
        <gs:MUILanguage Value="en-GB" /> <!-- Changed the display language to en-GB -->
        <gs:MUIFallback Value="en-US" /> <!-- English (United States) can be the fallback if en-GB is not available -->
    </gs:MUILanguagePreferences> 

    <!--User Locale-->
    <gs:UserLocale> 
        <gs:Locale Name="en-GB" SetAsCurrent="true" ResetAllSettings="false"/> <!-- Changed the locale to en-GB -->
    </gs:UserLocale>
</gs:GlobalizationServices>